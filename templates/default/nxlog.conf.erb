PidFile /var/run/nxlog.pid

<Extension syslog>
  Module  xm_syslog
</Extension>

<Extension json>
  Module  xm_json
</Extension>

<Input internal>
  Module      im_internal
</Input>

<Input kern>
  Module      im_kernel
  Exec        parse_syslog();
  Exec        $tags = "write";
  Exec        $message = $raw_event;
  Exec        to_json();
</Input>

<Input syslogsock>
  Module      im_uds
  uds         /dev/log
  Exec        parse_syslog_bsd();
  Exec        $tags = "Write";
  Exec        rename_field($Message, $message);
  Exec        $host = $Hostname;  
  Exec        $type = $SyslogFacility;
  Exec        to_json();
  FlowControl False
  Exec        if $raw_event =~ /SERVICE CHECK/ or $raw_event =~ /ELB-HealthChecker/ or $raw_event =~ /- - -/ { drop(); }
</Input>

<Input chef-client>
  Module      im_file
  File        '/etc/sv/chef-client/log/main/current'
  Exec        $tags = "write";
  Exec        $message = $raw_event;
  Exec        $host = hostname();
  Exec        $type = $SourceModuleName;
  Exec        to_json();
</Input>

include /usr/local/etc/nxlog/include/*.inc

<Output local>
Module om_file
  File "/var/log/messages"
  Exec to_syslog_bsd();
</Output>

<Output out>
  Module      om_tcp
  Port        <%=@tcpport%>
  Host        <%=@tcphost%>
</Output>

<Route 1>
  Path syslogsock, kern => local
</Route>
  
<Route 2>
  Path      internal, kern, chef-client, syslogsock => out
</Route>


